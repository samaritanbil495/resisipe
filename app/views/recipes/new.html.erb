        <div class="carousel-item active">
                <img src="img/spices.jpg" class="img-fluid" alt="Responsive image">
                <style>.carousel-item :active{
                    z-index: -1;
                }
                </style>
         </div>
            
          <form class="needs-validation" novalidate>
                <div class="form-row">
                  <div class="col-md-4 mb-3">
                    <label for="validationTooltip01">Recipe Name</label>
                    <input type="text" class="form-control" id="validationTooltip01"  placeholder="First name" value="Pancake" required>
                    <div class="valid-tooltip">
                      Looks good!
                    </div>
                  </div>
                </div>
                  <div class="form-row">
                  <div class="col-md-4 mb-3">
                    <label for="validationTooltip02">Recipe Details</label>
                    <input type="text" class="form-control" id="validationTooltip02" placeholder="Last name" value="Take a cup,break egg into the cup..." required>
                    <div class="valid-tooltip">
                      Looks good!
                    </div>
                  </div>
                </div>
            
                <div class="form-row">
                  <div class="col-md-4 mb-3">
                    <label for="validationTooltip03">Ingredients</label>
                    <input type="text" class="form-control" id="validationTooltip03" placeholder="Olive oil,potata..." required>
                    <div class="invalid-tooltip">
                      Please provide a valid city.
                    </div>
                </div>
                </div>

             <div class=container> 
                <div class="form-row">
                <div class="col-md-4 mb-3">
                        <form action="/action_page.php">
                            <input type="file" name="pic" accept="image/*">
                            <!-- <input type="submit"> -->
                          </form>
                  </div>
                </div>
                
                <div class="form-row">
                <button class="btn btn-primary" type="submit" style="z-index: 3">Submit form</button>
                </div>
               
                <style>
                
                .container {
                    position: relative;
                  }

                  input[type=text]{
                    width: 400px;
                    height: 100px;
                    border: 1px solid blue;
                }
                 
                
                .needs-validation{

                    position: absolute;
                    bottom: 180px;
                    right: 490px;
                    height: 300px;
                    color: white;
                    padding-left: 30px;
                    padding-right: 10px;
                  
                }
                </style>
            
              </form>
